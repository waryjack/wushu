<h3>Traits<a data-action="addItem" data-type="trait">+</a></h3>
<table>
{{#each traits as |item|}}
    <tr>
        <td><a data-action="rollTrait" data-item-id="{{item.id}}"><i class="fa-solid fa-dice-six"></i></a></td>
        <td><a data-action="editItem" data-item-id="{{item.id}}">{{trait.name}}</a> ({{item.rating}})
            {{#if (setting "useFeatures")}}<br>{{item.features}}{{/if}}
        </td>
        {{#if (setting "useCategories")}}<td>{{item.category}}</td>{{/if}}
        <td><a data-action="deleteItem" data-item-id="{{item.id}}"><i class="fa-solid fa-trash-can"></i></a></td>
    </tr>
{{/each}}
</table>