<div>
    <h3>Traits<a data-action="addItem" data-type="trait">+</a></h3>
    <div style="font-size:large">
    {{#each traits as |item|}}
    <a data-action="rollTrait" data-item-id="{{item.id}}"><i style="font-size:large;" class="fa-solid fa-dice-six"></i></a> <a data-action="editItem" data-item-id="{{item.id}}">{{item.name}}</a> ({{item.rating}}) {{item.category}}
    <a data-action="deleteItem" data-item-id="{{item.id}}"><i class="fa-solid fa-trash-can"></i></a>
    {{/each}}
    </div>
</div>