<div>
    <h3>{{localize "WUSHU.ui.sheets.traits"}}<a data-action="addItem" data-type="trait">+</a></h3>
    <div style="font-size:large">
    <ul style="list-style-type:none">
    {{#each traits as |item|}}
    <li><a data-action="rollTrait" data-item-id="{{item.id}}"><i style="font-size:large;" class="fa-solid fa-dice-six"></i></a> <a data-action="editItem" data-item-id="{{item.id}}">{{item.name}}</a> ({{item.rating}}) {{item.category}}
    <a data-action="deleteItem" data-item-id="{{item.id}}"><i class="fa-solid fa-trash-can"></i></a></li>
    {{/each}}
    </ul>
    </div>
</div>