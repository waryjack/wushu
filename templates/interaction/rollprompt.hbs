<div style="margin-right:12px;">
    <header>
        <title>{{localize "WUSHU.dialog.titles.traitroll"}}</title>
    </header>
    <section>
        <div class="flex-col">
            <div class="flex-row">
                <div class="flex-item">
                    <h2>{{traitname}} ({{rating}})</h2>
                    <p>{{localize "WUSHU.ui.dialogs.interaction.divide_pool"}}</p>
                </div>
            </div>
            <div class="flex-row">
                <table>
                    <tr>
                        <th>{{localize "WUSHU.dice.attack"}}</th>
                        <th>{{localize "WUSHU.dice.defense"}}</th>
                    </tr>
                    <tr>
                        <td><select name="atk">
                            {{selectOptions config.diceRatings localize=true}}
                            </select>
                        </td>
                        <td>
                            <select name="def">
                            {{selectOptions config.diceRatings localize=true}}
                            </select>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="flex-row">
                {{localize "WUSHU.dice.scabroll"}}? <input type="checkbox" name="scab"/>
            </div>
        </div>
    </section>
</div>