        <input 
            name="name" 
            type="text" 
            value="{{item.name}}" 
            placeholder="Name"/>
    </div>
    <div class="w-item-rating">
        <input type="text" name="system.rating" value="{{system.rating}}" data-dtype="Number"/>
    </div>
  
    <div class="w-item-description">
        {{> "systems/wushu/templates/partials/descriptionblock.hbs"}}
    </div>
</div>


